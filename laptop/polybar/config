[module/screen]
type = custom/script
exec = light | cut -d'.' -f1 | awk '{print " "$1"%"}'
interval = 1

format-background = ${colors.background-alt}
format-prefix = %{T3}%{T-}
format-prefix-foreground = ${colors.background-alt}
format-prefix-background = #D44500
format-suffix = %{T3}%{T-}
format-suffix-foreground = ${colors.background-alt}
format-suffix-background = ${colors.background-alt}

[module/backlight]
type = custom/script
exec = light -s "sysfs/leds/asus::kbd_backlight" | cut -d'.' -f1 | awk '{print " "$1"%"}'
interval = 1

format-background = #D44500
format-prefix = %{T3}%{T-}
format-prefix-foreground = #D44500
format-prefix-background = ${colors.background-alt}
format-suffix = %{T3}%{T-}
format-suffix-foreground = #D44500
format-suffix-background = #D44500

