[module/cpu_temperature]
type = custom/script
tail = true
exec-if = sensors
exec = sensors | grep "Package" | cut -d. -f1 | cut -d+ -f2 | awk '{print "Ôãâ "$1"¬∫C"}'
format-underline=#f90000

